<style lang="scss">
  section {
    position: relative;
    width: 100%;
    height: 100vh; /* 1623px; */
    background: url('/bg_support.png') no-repeat center center;
    background-size: cover;
    overflow: hidden;
  }
  .bg-dark-layer {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background: linear-gradient(180deg, #000 0%, rgba(0, 0, 0, 0.00) 20%);
    z-index: 10;
  }

  #supportTextBox {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 40;
    span {
      color: #0085FF;
      text-align: center;
      font-size: 240px;
      font-style: normal;
      font-weight: 700;
      line-height: 150%; /* 360px */
      letter-spacing: 26.4px;
      font-family: 'Helvetica Condensed','Pretendard Variable', sans-serif;
      opacity: 0.47;
      transition: letter-spacing 500ms;
      b {
        letter-spacing: 0;
      }
    }
  }

  #supportSubText {
    position: absolute;
    display: flex;
    width: 100%;
    height: 100%;
    left: 0;
    top:0;
    justify-content: center;
    align-items: center;
    opacity: 1;
    transition: opacity 500ms;
    p {
      color: #FFF;
      text-align: center;
      font-size: 44px;
      font-style: normal;
      font-weight: 800;
      line-height: 150%; /* 66px */
    }
  }

  #supportTextBox.on {
    span {
      letter-spacing: 156px;
      b {
        letter-spacing: 0;
      }
    }
    #supportSubText {
      opacity: 0;
    }
  }


  #logoContainer {
    position: absolute;
    display: flex;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    justify-content: center;
    align-items: center;
    z-index: 50;
  }

  #logoBox {
    display: grid;
    max-width: 1242px;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(3, 1fr);
    gap: 30px;

    .logo-item {
      opacity: .6;
      transition: opacity 400ms, transform 400ms ease-in-out;
    }
    .logo-item:nth-child(1) {
      transform: translate(-280px, -100px) rotate(29.024deg);
    }
    .logo-item:nth-child(2) {
      transform: translate(10px, -450px) rotate(-31.773deg);
    }
    .logo-item:nth-child(3) {
      transform: translate(340px, -240px) rotate(-13.526deg);
    }
    .logo-item:nth-child(4) {
      transform: translate(290px, -300px) rotate(31.28deg);
    }
    .logo-item:nth-child(5) {
      transform: translate(-420px, 90px) rotate(-12.044deg);
    }
    .logo-item:nth-child(6) {
      transform: translate(-220px, -220px) rotate(-13.496deg);
    }
    .logo-item:nth-child(7) {
      transform: translate(700px, 380px) rotate(37.765deg);
    }
    .logo-item:nth-child(8) {
      transform: translate(260px, 80px) rotate(10.096deg);
    }
    .logo-item:nth-child(9) {
      transform: translate(-70px, 180px) rotate(-56.68deg);
    }
    .logo-item:nth-child(10) {
      transform: translate(80px, 300px) rotate(13.982deg);
    }
    .logo-item:nth-child(11) {
      transform: translate(110px, 140px) rotate(-15.038deg);
    }
    .logo-item:nth-child(12) {
      transform: translate(60px, 320px) rotate(-41.629deg);
    }
  }

  #logoBox.on {
    .logo-item {
      opacity: 1;
      transform: translate(0) rotate(0);
    }
  }

  #logoEffectTrigger {
    position: absolute;
    width: 100%;
    height: 0;
    left: 0;
    bottom: 0;
  }
</style>
<script>
  const logoBox = document.getElementById('logoBox');
  const supportTextBox = document.getElementById('supportTextBox');
  const logoObserver = new IntersectionObserver((entries, observer) => {
    entries.forEach(entry => {
      if(entry.isIntersecting) {
        supportTextBox.classList.add('on');
        logoBox.classList.add('on');
        observer.unobserve(entry.target);
      }
    });
  }, {
    root: null,
    threshold: 0.7,
  });
  logoObserver.observe(document.getElementById('logoEffectTrigger'));
</script>
