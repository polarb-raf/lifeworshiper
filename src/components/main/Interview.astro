<style lang="scss">
  section {
    padding: 80px 0 50px;
    background-color: #000;
  }
  #interviewTitle {
    position: relative;
    z-index: 30;
    margin-bottom: 60px;
    h3 {
      text-align: center;
      margin-bottom: 25px;
    }
    p {
      color: #FFF;
      text-align: center;
      font-size: 44px;
      font-weight: 800;
      line-height: 150%; /* 66px */
