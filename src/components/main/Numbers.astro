<script>
  function countUp(countElement, maxNumber) {
    let now = maxNumber;

    const handle = setInterval(() => {
      countElement.innerHTML = new Intl.NumberFormat().format(Math.ceil(maxNumber - now));

      // 목표에 도달하면 정지
      if (now < 1) {
        clearInterval(handle);
      }

      // 적용될 수치, 점점 줄어듬
      const step = now / 3;

      now -= step;
    }, 50);
  }

  const numberCardElements = document.querySelectorAll('.number-card');
  const isCountUpNeeded = (entry) => {
    return entry.isIntersecting && entry.target.classList.contains('number-card') && entry.target.classList.contains('on') && !entry.target.classList.contains('count-up-ended');
  };
  const getNumberCard = (el) => {
    const targetId = el.classList.contains('collection') ? 'collection-number-card' : 'supporter-number-card';
    return document.getElementById(targetId);
  }


  const observer = new IntersectionObserver((entries, observer) => {
    entries.forEach(entry => {
      if (isCountUpNeeded(entry)) {
        const countUpTarget = entry.target.querySelector('.number-text');
        countUp(countUpTarget, countUpTarget.dataset.countNumber);
        entry.target.classList.add('count-up-ended');
        observer.unobserve(entry.target);
      }
    });
  }, {
    root: null,
    threshold: 0.5,
  });
  numberCardElements.forEach(target => {
    observer.observe(target);
    target.addEventListener('click', (e) => {
      const targetNumberCard = getNumberCard(e.currentTarget);
      if(targetNumberCard.classList.contains('on')) return;
      numberCardElements.forEach(el => el.classList.remove('on'));
      targetNumberCard.classList.add('on');
      if(!targetNumberCard.classList.contains('count-up-ended')) {
        const countUpTextEl = targetNumberCard.querySelector('.number-text');
        countUp(countUpTextEl, countUpTextEl.dataset.countNumber);
        targetNumberCard.classList.add('count-up-ended');
      }
    });
  });
</script>
