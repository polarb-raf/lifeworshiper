        background: url('/supporter_off.png') no-repeat center center;
      }
      span {
        text-align: center;
        padding: 0 0 45px;
      }
    }
    &.on {
      .number-card-inner {
        .number-text-box {
          width: 100%;
          height: 100%;
          background: url('/supporter_on.png') no-repeat center center;
        }
        span {
          text-align: left;
          padding: 0 65px 45px;
        }
        p {
          font-size: 220px;
          letter-spacing: -4.4px;
        }
      }
    }
  }
</style>
<script>
  function counter($counter, max) {
    let now = max;

    const handle = setInterval(() => {
      $counter.innerHTML = new Intl.NumberFormat().format(Math.ceil(max - now));

      // 목표에 도달하면 정지
      if (now < 1) {
        clearInterval(handle);
      }

      // 적용될 수치, 점점 줄어듬
      const step = now / 5;

      now -= step;
    }, 50);
  }
  const collectionNum = document.getElementById('collection-number');
  const max = 4372734553;

  collectionNum.addEventListener('click', () => {
    counter(collectionNum, max);
  });
</script>
